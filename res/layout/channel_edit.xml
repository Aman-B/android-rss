<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip">

	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Feed URL:"
	    />

	<EditText id="@+id/channelEditURL"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:singleLine="true"
		/>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Feed name:"
		/>
		
	<EditText id="@+id/channelEditName"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:singleLine="true"
		/>

<!--		
	<CheckBox id="@+id/download_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Determine name from feed"
		/>
		
	<CheckBox id="@+id/download_icon"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Attempt to download feed icon"
		/>
  -->

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingTop="8dip"
		android:gravity="center_horizontal">

		<Button id="@+id/channelEditSave"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Save"
			/>
	
	</LinearLayout>
	
</LinearLayout>

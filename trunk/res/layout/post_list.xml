<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<!-- Holds the logo and the channel text.  The ImageView will be shown
	     over the TextView, leaving the TextView as a simple fallback. -->
	<view class="org.devtcg.rssreader.RSSChannelHead" id="@+id/postListHead"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
	
	<ListView id="@android:id/list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		/>

	<TextView id="@android:id/empty"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:text="No posts."
		/>
	
</LinearLayout>
